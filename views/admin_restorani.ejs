<%- include('partials/header'); -%>


<ul class="recipes">
    <% for(var i=0; i<result.length; i++) { %>
    <li class="recipe" id="<%= result[i].id %>">
      <img src="/hamburger.png" alt="smoothie recipe icon">
      <h1><%= result[i].naziv %></h1>
      <h3>GRAD: <%= result[i].grad %></h3>
      <h3>KATEGORIJA: <%= result[i].kategorija %></h3>
      <h3>ZVJEZDICE: <%= result[i].zvjezdice %></h3>
      <h3>DODATNO: <%= result[i].dodatno %></h3>
      <h3>ID ADMINA RESTORANA: <%= result[i].id_ar %></h3>
      <a href="/admin_uredi_restoran/<%= result[i].id %>"><input type="button" class="btn" value="UREDI"></a>
      <a href="/admin_meni_restorana/<%= result[i].id %>"><input type="button" class="btn" value="MENI"></a>
      <a href="/admin_dodaj_ar/<%= result[i].id %>"><input type="button" class="bar" value="DODAJ ADMINISTRATORA"></a>
      <input type="button" class="bri" value="IZBRIÅ I" onclick="izbrisi('<%= result[i].id %>')">
    </li>
    <% } %>
  </ul>

<script>
  function izbrisi(id){
    $.ajax({
      url: '/admin_izbrisi_restoran/' + id,
      method: 'DELETE',
      success: function(result){
        console.log('Izbrisan restoran ' + id);
        $('#'+id).hide('slow');
      }
    });
  }
</script>

